{
  "name": "@tablecraft/codegen",
  "version": "0.0.4",
  "description": "Generate TypeScript types from TableCraft API metadata",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tablecraft-codegen": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.32",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "tablecraft",
    "codegen",
    "typescript",
    "types",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacksonkasi1/TableCraft.git",
    "directory": "packages/codegen"
  },
  "homepage": "https://github.com/jacksonkasi1/TableCraft#readme",
  "bugs": {
    "url": "https://github.com/jacksonkasi1/TableCraft/issues"
  },
  "license": "MIT"
}